{
  "$schema": "https://turbo.build/schema.json",
  "experimentalUI": true,
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_WURTH_LAC_OLD_API",
    "NEXT_PUBLIC_WURTH_LAC_LOGIN_PUBLIC_KEY",
    "EXPO_USE_METRO_WORKSPACE_ROOT",
    "EXPO_PUBLIC_API_URL"
  ],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build", "lint"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "node_modules/.cache/metro/**",
        "dist/**",
        "storybook-static/**"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
