{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_RUNTIME",
    "VERCEL_ENV",
    "VERCEL_PROJECT_PRODUCTION_URL",
    "SENTRY_AUTH_TOKEN",
    "NEXT_PUBLIC_WURTH_LAC_API",
    "NEXT_PUBLIC_WURTH_LAC_SEARCH_API",
    "NEXT_PUBLIC_WURTH_LAC_API_KEY",
    "NEXT_PUBLIC_WURTH_LAC_SNAPPAY_URL",
    "NEXT_PUBLIC_WURTH_LAC_RECAPTCHA_SITE_KEY",
    "NEXT_PUBLIC_WURTH_LAC_GTM_KEY",
    "NEXT_PUBLIC_WURTH_LAC_SENTRY_DSN",
    "NEXT_PUBLIC_WURTH_LAC_DISABLE_GTM",
    "WURTH_LAC_SEARCH_DATA_AND_SITEMAP_API_KEY",
    "EXPO_USE_METRO_WORKSPACE_ROOT",
    "EXPO_PUBLIC_API_URL"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build", "lint"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "node_modules/.cache/metro/**",
        "storybook-static/**"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
