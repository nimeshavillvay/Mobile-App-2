{
  "extends": "@repo/typescript-config/next.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./app/*"],
      "@/old/*": ["./app/(site)/(old-design)/*"],
      "~/*": [
        "../../packages/web-ui/src/*",
        "../../packages/shared-logic/src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "reset.d.ts",
    "global-error-registration.d.ts"
  ],
  "exclude": ["node_modules"]
}
