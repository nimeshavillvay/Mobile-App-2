{
  "cli": {
    "version": ">= 10.2.1"
  },
  "build": {
    "base": {
      "node": "20.12.2",
      "pnpm": "9.4.0"
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "ENVIRONMENT": "development"
      }
    },
    "qa": {
      "extends": "base",
      "distribution": "internal",
      "env": {
        "ENVIRONMENT": "qa"
      },
      "android": {
        "buildType": "apk",
        "image": "latest"
      },
      "ios": {
        "image": "latest"
      }
    },
    "qa-ios-simulator": {
      "extends": "qa",
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "extends": "base",
      "distribution": "store",
      "env": {
        "ENVIRONMENT": "production"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
