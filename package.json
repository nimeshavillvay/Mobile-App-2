{
  "name": "frontend-monorepo-template",
  "private": true,
  "scripts": {
    "dev": "dotenv -c -- turbo dev",
    "build": "dotenv -c -- turbo build",
    "start": "dotenv -c -- turbo start",
    "lint": "dotenv -c -- turbo lint",
    "prettier:format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "prettier:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,json}\""
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  },
  "devDependencies": {
    "prettier": "3.2.5",
    "prettier-plugin-organize-imports": "3.2.4",
    "prettier-plugin-tailwindcss": "0.5.11",
    "turbo": "1.12.3"
  },
  "dependencies": {
    "dotenv-cli": "7.3.0"
  }
}
