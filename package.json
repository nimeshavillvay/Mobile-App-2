{
  "name": "wurth-frontend-monorepo",
  "private": true,
  "scripts": {
    "dev": "dotenv -c -- turbo dev",
    "build": "dotenv -c -- turbo build",
    "start": "dotenv -c -- turbo start",
    "lint": "dotenv -c -- turbo lint",
    "prettier:format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json,yaml}\" --cache",
    "prettier:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,json,yaml}\" --cache"
  },
  "engines": {
    "node": ">=20.12.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  },
  "devDependencies": {
    "@repo/prettier-config": "workspace:*",
    "prettier": "3.3.2",
    "turbo": "1.13.3"
  },
  "dependencies": {
    "dotenv-cli": "7.4.2"
  }
}
